###############################################################################
## Imports
###############################################################################

import clutter
import gobject
import logging

from gyparody.config import config
from gyparody.gui import GUI


###############################################################################
## Functions
###############################################################################

def main():
    """
    """
    # Startup the logging system.
    # Setup logging for audio interface.
    logging.basicConfig(filename=config.log_filename,
                        level=logging.DEBUG,
                        format=config.log_format)
    consolehandler = logging.StreamHandler()
    consolehandler.setLevel( logging.DEBUG )
    formatter = logging.Formatter(config.log_format)
    consolehandler.setFormatter(formatter)
    logging.getLogger( '' ).addHandler( consolehandler )

    gui = GUI()

    gobject.timeout_add(1000, gui.on_second)

    clutter.main()

    return 0

def tick_test():
    print 'tick test.'
    return True

###############################################################################
## Statements
###############################################################################

if __name__ == '__main__':
    main()

